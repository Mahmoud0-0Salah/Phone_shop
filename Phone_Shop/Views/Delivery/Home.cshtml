@model IEnumerable<Phone_Shop.Models.Order>

<link rel="stylesheet" href="~/css/bootstrap.min.css" />
<style type="text/css">
    .container {
        margin: 30px;
    }
</style>

<li class="nav-item">
    <a class="nav-link" asp-controller="Delivery" asp-action="DeliveryReport">Delivery Report</a>
    <a class="nav-link" asp-controller="Delivery" asp-action="Home" asp-route-Shipped="false">UnShipped</a>
    <a class="nav-link" asp-controller="Delivery" asp-action="Home" asp-route-Shipped="true">Shipped</a>
</li>

<div class="container bootstrap snippets bootdey">
    @foreach (var Order in Model)
    {
        <div class="row">
            <div class="col-md-7">
                <div class="well">
                    <a asp-controller="Delivery" asp-action="OrderDetails" asp-route-id="@Order.Id">Order Details</a>
                    <span class="badge pull-right">@Order.OrderedAt</span>
                </div>
                <hr>
            </div>
        </div>
    }
</div>

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="~/js/bootstrap.min.js"></script>
