@model Phone_Shop.ViewModel.ShoppingCartViewModel
@{
    ViewData["Title"] = "Index";
}
@if (Model.CartItems.Count != 0)
{
    <h2>Your Shopping Cart</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CartItems)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>@item.Product.Price.ToString("C")</td>
                    <td>@item.Quantity</td>
                    <td>@((item.Product.Price * item.Quantity).ToString("C"))</td>
                    <td>
                        <button onclick="console.log('@item.ProductId'); confirmRemove('@item.ProductId')" class="btn btn-danger btn-sm">Remove</button>

                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-right">
        <strong>Total: @Model.CartTotal.ToString("C")</strong>
    </div>

    <form id="clearCartForm" asp-controller="Cart" asp-action="ClearCart" method="post">
        <div class="row mt-3">
            <div class="col-md-4">
                <a class="btn btn-primary" href="@Url.Action("Index", "Home")">Continue Shopping</a>
            </div>
            <div class="col-md-4 text-center">
                <button class="btn btn-danger" onclick="confirmClearCart()">Clear Cart</button>
            </div>
            <div class="col-md-4 text-right">
                <a class="btn btn-success" href="@Url.Action("Index", "Order")">Check Out</a>
            </div>
        </div>
    </form>
}
else
{
    <p>Your shopping cart is empty.</p>
    <div class="col-md-4">
        <a class="btn btn-primary" href="@Url.Action("Index", "Home")">Continue Shopping</a>
    </div>
}

@section scripts {
    <script>
        function confirmRemove(productId) {
            if (confirm("Are you sure you want to remove this item from the cart?")) {
                removeFromCart(productId);
            }
        }

        function removeFromCart(productId) {
            $.ajax({
                url: '/Cart/RemoveFromCart',
                type: 'POST',
                dataType: 'json',
                data: { ProductId: productId },
                success: function (data) {
                    alert(data.Message);

                    location.reload();
                },
                error: function (error) {
                    console.error('Error:', error);
                }
            });
        }
    </script>
}
<script>
    function confirmClearCart() {
        if (confirm('Are you sure you want to clear the cart?')) {
            document.getElementById('clearCartForm').submit();
        }
    }
</script>