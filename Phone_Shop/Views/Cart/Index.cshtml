@model Phone_Shop.ViewModel.ShoppingCartViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Your Phone Shop</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8sh+WyVpBk2a2F9Zu76U02UCA7kgqO5FpTF6" crossorigin="anonymous">
    <meta http-equiv="cache-control" content="no-cache, no-store, must-revalidate">
    <meta http-equiv="pragma" content="no-cache">
    <meta http-equiv="expires" content="0">
    <style>
        body {
            background-color: #f5f5f5;
            font-family: 'Arial', sans-serif;
            padding-top: 56px;
        }

        .cart-container {
            max-width: 800px;
            margin: 50px auto;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
        }

        .container {
            background-color: #ffffff;
            padding: 20px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            margin: 50px auto;
            max-width: 800px;
        }

        h2 {
            color: #007bff;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th, td {
            border: 1px solid #dee2e6;
            padding: 15px;
            text-align: left;
        }

        .cart-item img {
            max-width: 80px; /* Adjust the size as needed */
            max-height: 80px; /* Adjust the size as needed */
            border-radius: 5px;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
        }

        .cart-actions {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
            align-items: center;
        }

        .cart-product-icon {
            max-width: 100px;
            max-height: 100px;
            border-radius: 50%;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
        }

        .btn-continue-shopping,
        .btn-clear-cart,
        .btn-checkout,
        .btn-remove-from-cart,
        .btn-update-quantity {
            background-color: #28a745;
            color: #fff;
            border: none;
            cursor: pointer;
            padding: 12px 20px;
            border-radius: 5px;
            margin-right: 10px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            transition: background-color 0.3s ease;
        }

        .btn-clear-cart,
        .btn-remove-from-cart {
            background-color: #dc3545;
        }

            .btn-continue-shopping:hover,
            .btn-clear-cart:hover,
            .btn-checkout:hover,
            .btn-remove-from-cart:hover,
            .btn-update-quantity:hover {
                background-color: #218838;
            }

        .alert-message {
            margin-top: 20px;
            display: none;
            padding: 15px;
            border-radius: 5px;
            background-color: #28a745;
            color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .qty-counter {
            display: flex;
            align-items: center;
        }

        .qty-input {
            width: 60px;
            text-align: center;
            margin: 0 10px;
            font-size: 16px;
        }

        .qty-btn {
            background-color: #007bff;
            color: #fff;
            border: none;
            cursor: pointer;
            padding: 8px 10px;
            border-radius: 5px;
            font-size: 14px;
        }
    </style>
</head>
<body>

    <div class="container cart-container">
        <h2>Your Shopping Cart</h2>

        <!-- Cart Items Table -->
        <table class="table">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Remove</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.CartItems)
                {
                    <tr>
                        <td>
                            <img src="@item.Product.ImgUrl" alt="Product Image" class="img-thumbnail cart-product-icon">
                            <span>@item.Product.Name</span>
                        </td>
                        <td>$@item.Product.Price</td>
                        <td>
                            <form action="@Url.Action("UpdateCart", "Cart")" method="post">
                                <div class="input-group">
                                    <input type="hidden" name="id" value="@item.ProductId" />
                                    <input type="number" name="qty" class="form-control" min="1" max="@item.Product.Amount" value="@item.Quantity" />
                                    <div class="input-group-append">
                                        <button type="submit" class="btn btn-outline-secondary update-cart-btn">Update</button>
                                    </div>
                                </div>
                            </form>
                        </td>
                        <td>
                            <button class="btn btn-remove-from-cart" onclick="removeFromCart(@item.Product.Id)">Remove</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Cart Summary -->
        <div class="cart-summary">
            <p>Total: $@Model.CartTotal</p>
        </div>

        <!-- Cart Actions -->
        <div class="cart-actions">
            <button class="btn btn-continue-shopping" onclick="continueShopping()">Continue Shopping</button>
            <button class="btn btn-clear-cart" onclick="clearCart()">Clear Cart</button>
            @if (Model.CartItems.Any())
            {
                <a href="/Order/Index" class="btn btn-checkout">Checkout</a>
            }
        </div>

        <!-- Alert Message -->
        <div class="alert alert-success alert-message">
            Cart cleared successfully!
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script>
        function continueShopping() {
            window.location.href = "/Home/Index";
        }

        function removeFromCart(productId) {
            if (confirm('Are you sure you want to remove this item from the cart?')) {
                $.ajax({
                    url: '/Cart/RemoveFromCart',
                    type: 'POST',
                    data: { productId: productId },
                    success: function (data) {
                        var rowId = '#row_' + productId;
                        $(rowId).remove();
                        updateCartTotal(data.cartTotal);
                        showRemoveSuccessMessage();
                    },
                    error: function (error) {
                        console.error('Error removing from cart:', error);
                    }
                });
            }
        }
        function showRemoveSuccessMessage() {
            var alertMessage = $('.alert-message');
            alertMessage.text('Product removed from cart successfully!').show();
            setTimeout(function () {
                alertMessage.hide();
            }, 3000);
        }
        function clearCart() {
            if (confirm('Are you sure you want to clear the cart?')) {
                $.ajax({
                    url: '/Cart/ClearCart',
                    type: 'POST',
                    success: function (data) {
                        $('.table tbody').empty();
                        $('.cart-summary p').text('Total: $0');
                        $('.alert-message').text('Cart cleared successfully!').show();
                    },
                    error: function (error) {
                        console.error('Error clearing cart:', error);
                    }
                });
            }
        }
        function updateCartTotal(cartTotal) {
            if (cartTotal !== undefined) {
                $('.cart-summary p').text('Total: $' + cartTotal.toFixed(2));
            } else {
                console.error('Cart total is undefined.');
            }
        }
    </script>

</body>
</html>
