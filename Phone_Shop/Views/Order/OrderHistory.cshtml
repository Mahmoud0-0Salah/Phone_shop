@model IEnumerable<Phone_Shop.Models.Order>

@{
    ViewData["Title"] = "Order History";
}

<h1 class="text-center" style="color: #3498db;">@ViewData["Title"]</h1>


<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
      
                <th>@Html.DisplayNameFor(model => model.OrderedAt)</th>
                <th>@Html.DisplayNameFor(model => model.TotalPrice)</th>
                <th>@Html.DisplayNameFor(model => model.Status)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                  
                    <td>@Html.DisplayFor(modelItem => order.OrderedAt)</td>
                    <td>@Html.DisplayFor(modelItem => order.TotalPrice)</td>
                    <td>@Html.DisplayFor(modelItem => order.Status)</td>
                    <td>
                        <a asp-controller="Order" asp-action="OrderDetails" asp-route-id="@order.Id" class="btn btn-warning">View</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

